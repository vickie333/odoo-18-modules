<odoo>
    <record id="estate_image_view_kanban" model="ir.ui.view">
        <field name="name">estate.image.kanban</field>
        <field name="model">estate.image</field>
        <field name="arch" type="xml">
            <kanban string="Estate Images">
                <field name="name"/>
                <field name="image"/>
                <field name="description"/>
                <field name="image_type"/>
                <field name="sequence"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image" style="height: 200px; overflow: hidden; display: flex; align-items: center; justify-content: center;">
                                <img t-if="record.image.raw_value" 
                                     t-att-src="'data:image/png;base64,' + record.image.raw_value" 
                                     class="img img-fluid" 
                                     style="max-height: 100%; max-width: 100%; object-fit: cover;"
                                     alt="Property Image"/>
                                <div t-else="" class="o_kanban_image_empty" style="height: 200px; display: flex; align-items: center; justify-content: center; background-color: #f8f9fa; border: 2px dashed #dee2e6; flex-direction: column;">
                                    <i class="fa fa-image" style="font-size: 3em; color: #6c757d; margin-bottom: 10px;"/>
                                    <small style="color: #6c757d;">Sin imagen</small>
                                    <small style="color: #6c757d; font-size: 0.8em;">ID: <t t-esc="record.id"/></small>
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom" style="padding: 10px;">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title" style="font-size: 1.1em; color: #495057;">
                                        <field name="name"/>
                                    </strong>
                                </div>
                                <div class="o_kanban_record_body">
                                    <field name="description"/>
                                </div>
                                <div class="o_kanban_record_bottom" style="margin-top: 8px;">
                                    <span class="badge badge-info" style="font-size: 0.8em;">
                                        <field name="image_type"/>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="estate_image_view_form" model="ir.ui.view">
        <field name="name">estate.image.form</field>
        <field name="model">estate.image</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="image"/>
                        <field name="description"/>
                        <field name="image_type"/>
                        <field name="sequence"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_image_view_list" model="ir.ui.view">
        <field name="name">estate.image.list</field>
        <field name="model">estate.image</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="image"/>
                <field name="description"/>
                <field name="image_type"/>
                <field name="sequence"/>
            </list>
        </field>
    </record>

</odoo>