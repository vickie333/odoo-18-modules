<odoo>
        <record id="estate_view_list" model="ir.ui.view">
            <field name="name">estate.property.list</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <list decoration-success="state in ['offer_accepted', 'offer_received']" 
                    decoration-bf="state == 'offer_accepted'"
                    decoration-muted="state == 'sold'" >
                    <field name="name"  width="20%"/>
                    <field name="postcode" optional="show"  width="20%"/>
                    <field name="bedrooms"  width="20%"/>
                    <field name="living_area"  width="20%"/>
                    <field name="expected_price" widget="monetary"  width="20%"/>
                    <field name="selling_price"  width="20%"/>
                    <field name="date_availability"  width="20%" optional="hidden"/>
                    <field name="property_type_id" string="Property Type"  width="20%"/>
                </list>
            </field>
        </record>

        <record id="estate_view_form" model="ir.ui.view">
            <field name="name">estate.property.form</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <header>
                            <button name="action_cancel_property" type="object" string="Cancel" invisible="state == 'sold' or state == 'canceled'"/>
                            <button name="action_sold_property" type="object" string="Sold" invisible="state == 'sold' or state == 'canceled'"/>
                            <field name="state" widget="statusbar" statusbar_visible="new,offer_received,offer_accepted,sold,canceled"/>
                        </header>
                        <group>
                            <group>
                                <div class="name">
                                    <label for="name"/>
                                    <h1>
                                        <field name="name"/>
                                    </h1>
                                </div>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="tags_ids" widget="many2many_tags" options="{'color_field': 'color', 'edit_tags': True}"/>
                                <field name="postcode"/>
                                <field name="date_availability"/>
                                <field name="property_type_id" options="{'no_create': True, 'no_open': True}"/>
                            </group>
                            <group>
                                <field name="state"/>
                                <field name="expected_price"/>
                                <field name="best_price"/>
                                <field name="selling_price"/>
                                </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <field name="description"/>
                                <group>
                                    <group>
                                        <field name="bedrooms"/>
                                        <field name="living_area"/>
                                        <field name="facades"/>
                                        <field name="garage"/>
                                    </group>
                                    <group>
                                        <field name="total_area"/>
                                        <field name="garden"/>
                                        <field name="garden_area" invisible="not garden"/>
                                        <field name="garden_orientation" invisible="not garden"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Offers">
                                <field name="offer_ids" widget="one2many_list" readonly="state in ['sold', 'offer_accepted', 'canceled']"/>
                            </page>
                            <page string="Other info">
                                <group>
                                    <field name="buyer_id" widget="many2one"/>
                                </group>
                                <group>
                                    <field name="salesperson_id" widget="many2one"/>
                                </group>
                            </page>
                        </notebook>   
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <record id="estate_view_search" model="ir.ui.view">
            <field name="name">estate.property.search</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <search>
                    <filter name="state" domain="['|', ('state', '=', 'new'), ('state','=','offer_received')]"/>
                    <separator/>
                    <filter name="available" string="Available"
                            domain="[('date_availability', '&lt;=', context_today())]"
                            help="Properties available for sale"/>
                    <separator/>
                    <field name="living_area" string="Living Area"
                            filter_domain="[('living_area', '&gt;=', self)]"/>
                    <group>
                        <filter name="postcode" context="{'group_by': 'postcode'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="estate_property_act_window" model="ir.actions.act_window">
            <field name="name">Estate</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">estate.property</field>
            <field name="view_mode">list,form,search</field>
            <field name="context">{'search_default_available': True}</field>
        </record>
</odoo>